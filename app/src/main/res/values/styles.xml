<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopCornersRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/margin_padding_16dp</item>
        <item name="cornerSizeTopRight">@dimen/margin_padding_16dp</item>
    </style>

    <style name="AddButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/margin_padding_8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@null</item>
        <item name="android:backgroundTint">@color/iced_pink_rose</item>
        <item name="android:fontFamily">@font/hind_bold</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontFamily">@font/mukta_bold</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textColor">?attr/colorOnPrimaryFixed</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/mukta_medium</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/hind_bold</item>
    </style>

    <style name="RegularTextStyle">
        <item name="android:textColor">@color/gray_night_70</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/hind_regular</item>
    </style>

    <style name="SemiBoldTextStyle">
        <item name="android:textColor">?attr/colorOnPrimaryFixed</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/hind_semibold</item>
    </style>

    <style name="MediumTextStyle">
        <item name="android:textColor">?attr/colorOnPrimaryFixed</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/hind_medium</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <!-- ✅ Добавлен стиль для кружков с днями недели -->
    <style name="DayCircle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/circle_day</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
