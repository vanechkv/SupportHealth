<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".stress.statistic.ui.StatisticMoodFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_padding_16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_padding_16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_padding_8dp"
        android:paddingVertical="@dimen/margin_padding_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistic"
            app:layout_constraintBottom_toBottomOf="@id/button_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/button_back" />

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/table_layout"
        style="@style/TabLayoutStyle"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnPrimary"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:tabIndicatorColor="?attr/colorOnPrimaryFixed"
        app:tabTextColor="?attr/colorOnPrimaryFixed" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        app:layout_constraintTop_toBottomOf="@id/table_layout" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_32dp"
        app:checkedButton="@id/stress"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/line_chart"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stress"
            style="@style/Widget.Material3.Button"
            android:layout_width="@dimen/margin_padding_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/toggle_button_bg"
            android:text="@string/stress"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimaryFixed"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/margin_padding_16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/energy"
            style="@style/Widget.Material3.Button"
            android:layout_width="@dimen/margin_padding_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/toggle_button_bg"
            android:text="@string/energy_label"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimaryFixed"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/margin_padding_16dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dynamics"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        android:background="@drawable/bg_container"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/toggleGroup">

        <com.example.supporthealth.stress.statistic.ui.custom.CircleChartView
            android:id="@+id/dynamics_circle"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/dynamics_list"
            android:layout_width="@dimen/margin_padding_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:layout_marginEnd="@dimen/margin_padding_16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/dynamics_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dynamics_circle"
            app:layout_constraintTop_toTopOf="@id/dynamics_circle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        app:constraint_referenced_ids="night,morning,day,evening"
        app:flow_wrapMode="chain"
        app:flow_maxElementsWrap="2"
        app:flow_horizontalGap="16dp"
        app:flow_verticalGap="16dp"
        app:flow_horizontalAlign="start"
        app:layout_constraintTop_toBottomOf="@id/dynamics"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/night"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        android:layout_marginEnd="@dimen/margin_padding_8dp"
        android:background="@drawable/bg_container"
        app:layout_constraintEnd_toStartOf="@id/morning"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/dynamics"
        android:visibility="gone">

        <TextView
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:text="@string/night"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="@id/icon_night"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_night" />

        <ImageView
            android:id="@+id/icon_night"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_8dp"
            android:src="@drawable/ic_mood_bad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_night"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnPrimaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_night"
            tools:text="Хорошее" />

        <TextView
            android:id="@+id/percent_night"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_16dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_night"
            tools:text="50%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morning"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_8dp"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        android:background="@drawable/bg_container"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/night"
        app:layout_constraintTop_toBottomOf="@id/dynamics"
        android:visibility="gone">

        <TextView
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:text="@string/morning"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="@id/icon_morning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_morning" />

        <ImageView
            android:id="@+id/icon_morning"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_8dp"
            android:src="@drawable/ic_mood_bad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_morning"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnPrimaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_morning"
            tools:text="Хорошее" />

        <TextView
            android:id="@+id/percent_morning"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_16dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_morning"
            tools:text="50%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/day"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        android:layout_marginEnd="@dimen/margin_padding_8dp"
        android:background="@drawable/bg_container"
        app:layout_constraintEnd_toStartOf="@id/evening"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/night"
        android:visibility="gone">

        <TextView
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:text="@string/day"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="@id/icon_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_day" />

        <ImageView
            android:id="@+id/icon_day"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_8dp"
            android:src="@drawable/ic_mood_bad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_day"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnPrimaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_day"
            tools:text="Хорошее" />

        <TextView
            android:id="@+id/percent_day"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_16dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_day"
            tools:text="50%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/evening"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_8dp"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        android:background="@drawable/bg_container"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/day"
        app:layout_constraintTop_toBottomOf="@id/morning"
        android:visibility="gone">

        <TextView
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:text="@string/evening"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="@id/icon_evening"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_evening" />

        <ImageView
            android:id="@+id/icon_evening"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_8dp"
            android:src="@drawable/ic_mood_bad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_evening"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnPrimaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_evening"
            tools:text="Хорошее" />

        <TextView
            android:id="@+id/percent_evening"
            style="@style/RegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_marginEnd="@dimen/margin_padding_16dp"
            android:layout_marginBottom="@dimen/margin_padding_16dp"
            android:textColor="?attr/colorOnSecondaryFixed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_evening"
            tools:text="50%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
