<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_padding_16dp"
    android:background="@drawable/bg_water"
    android:paddingHorizontal="@dimen/margin_padding_16dp"
    android:paddingVertical="@dimen/margin_padding_8dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <TextView
        android:id="@+id/title"
        style="@style/BoldTextStyle"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0 л" />

    <TextView
        android:id="@+id/recommended"
        style="@style/RegularTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/recommended_water"
        style="@style/RegularTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_8dp"
        app:layout_constraintStart_toEndOf="@id/recommended"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="2,63 л" />

    <Button
        android:id="@+id/button_add"
        style="@style/AddButtonStyle"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_marginEnd="@dimen/margin_padding_16dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_add"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        app:layout_constraintTop_toBottomOf="@id/recommended_water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_delete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_delete"
        style="@style/AddButtonStyle"
        android:layout_width="@dimen/margin_padding_0dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_remove"
        android:layout_marginTop="@dimen/margin_padding_16dp"
        app:layout_constraintTop_toBottomOf="@id/recommended_water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_center"
        app:layout_constraintStart_toEndOf="@id/button_add"/>

    <ImageView
        android:id="@+id/image_water"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_nutrition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>